@model IEnumerable<PatientManager.Core.Application.ViewModels.Doctor.DoctorViewModel>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container">
    <div class="d-flex justify-content-between bottom-line">
        <div>
            <h1 class="d-inline">Medicos</h1>
        </div>
        <div>
            <a class="btn btn-primary m-2" asp-action="Create">Nuevo Medico</a>
        </div>
    </div>
    <hr />
    <div class="container">
        @if (Model.Count() == 0)
        {
            <h3 class="mt-3 ml-2 fw-light">No hay medicos registrados</h3>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card">
                            <img src="/images/doctors/@item.ImageUrl" class="card-img-top" height="250" alt="@item.Name">
                            <div class="card-body d-flex flex-column mt-0">
                                    <h5 class="card-title mb-2">
                                        @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.LastName)
                                    </h5>
                                <div class="text-center mb-2">
                                    @Html.DisplayFor(modelItem => item.PersonalID)
                                </div>
                                <div class="mb-2">
                                    - @Html.DisplayFor(modelItem => item.Email)
                                </div>
                                <div class="mb-3">
                                    - @Html.DisplayFor(modelItem => item.Phone)
                                </div>
                                <div class="mb-2 mt-auto text-center">
                                    <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-outline-warning col-5 mx-auto">
                                        Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-outline-danger col-5 mx-auto">
                                        Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
