@model PatientManager.Core.Application.ViewModels.Appointment.AppointmentViewModel

@{
    ViewData["Title"] = "Appointments";
}

<div class="container">
    <div class="d-flex justify-content-between bottom-line">
        <div>
            <h1 class="d-inline">Resultados de Laboratorio</h1>
        </div>
        <div class="mt-2">
            <a asp-action="Index" class="btn btn-outline-primary mx-auto">
                Regresar
            </a>
        </div>
    </div>
    <hr />
    <div class="text-center">
        <h5>@Html.DisplayFor(model => model.Patient.Name) @Html.DisplayFor(model => model.Patient.Name), @Html.DisplayFor(model => model.Date) </h5>
    </div>
    <hr />
    <div class="container">
        @if (Model.LabReports.Count() == 0)
        {
            <h3 class="mt-3 ml-2 fw-light">No hay pruebas realizadas</h3>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.LabReports)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card">
                            <div class="card-header text-center">
                                <h4>  @Html.DisplayFor(modelItem => item.LabTest.Name)</h4>
                            </div>
                            <div class="card-body">
                                @Html.DisplayFor(modelItem => item.Results)
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>