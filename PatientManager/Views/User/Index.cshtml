@model IEnumerable<PatientManager.Core.Application.ViewModels.User.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between bottom-line">
    <div>
        <h1 class="d-inline">Usuarios</h1>
    </div>
    <div>
        <a class="btn btn-primary m-2" asp-action="Register">Registrar Usuario</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        @if (Model == null || Model.Count() == 0)
        {
            <h3 class="fw-light">No existen usuarios</h3>
        }
        else
        {
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserType)
                        </th>
                        <th class="text-center">
                            <span>Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserType)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-warning col-5 mx-auto">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger col-5 mx-auto">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>