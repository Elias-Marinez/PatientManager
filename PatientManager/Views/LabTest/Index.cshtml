@model IEnumerable<PatientManager.Core.Application.ViewModels.LabTest.LabTestViewModel>

@{
    ViewData["Title"] = "LabTest";
}

<div class="d-flex justify-content-between bottom-line">
    <div>
        <h1 class="d-inline">Pruebas de Laboratorio</h1>
    </div>
    <div>
        <a class="btn btn-primary m-2" asp-action="Create">Nueva prueba</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        @if (Model.Count() == 0)
        {
            <h3 class="fw-light">No existen pruebas</h3>
        }
        else
        {
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td class="align-items-center">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.LabTestId" class="btn btn-outline-warning col-4 mx-auto">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.LabTestId" class="btn btn-outline-danger col-4 mx-auto">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>