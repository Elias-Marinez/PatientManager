@model PatientManager.Core.Application.ViewModels.Patient.PatientSaveViewModel

@{
    ViewData["Title"] = "Patients";
}

<div class="d-flex justify-content-between bottom-line">
    <div>
        <h1 class="d-inline">Pacientes</h1>
    </div>
    <div>
        <h5 class="fw-ligther m-3">Agregando paciente</h5>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="card-header">
                    <div class="form-group text-center">
                        <span>Area de registro</span>
                    </div>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nombre</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Apellido</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Celular</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Direccion</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonalID" class="control-label">Cedula</label>
                        <input asp-for="PersonalID" class="form-control" />
                        <span asp-validation-for="PersonalID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Birtday" class="control-label">Fecha de nacimiento</label>
                        <input asp-for="Birtday" type="date" class="form-control" />
                        <span asp-validation-for="Birtday" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check mt-1">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Allergies" /> Alergias
                        </label>
                    </div>
                    <div class="form-group form-check mt-1">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Smoker" /> Fumador
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label">Foto</label>
                        <input type="file" asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group mt-2 text-center">
                        <input type="submit" value="Guardar" class="btn btn-block btn-success col-6 mx-auto" />
                        <a asp-action="Index" class="btn btn-block btn-primary col-5 mx-auto">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>